<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/view.margin.normal"
              android:layout_marginRight="@dimen/view.margin.normal"
              android:clickable="true"
              android:foreground="@drawable/mid_grey_ripple"
              android:orientation="horizontal"
    >

    <!--android:background="?android:attr/selectableItemBackground"-->


    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_image_id"
        android:layout_width="93dp"
        android:layout_height="74dp"
        android:layout_marginBottom="@dimen/view.margin.small"
        android:layout_marginTop="@dimen/view.margin.small"
        android:foreground="@drawable/mid_grey_ripple"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view.margin.normal"
        >

        <TextView
            android:id="@+id/item_text_id"
            style="@style/Theme.TextAppearance.List.Title"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/view.margin.normal"
            android:layout_weight="1"
            android:singleLine="false"
            />

        <TextView
            android:id="@+id/item_text_source_id"
            style="@style/Theme.TextAppearance.List.Small"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/view.margin.small"
            tools:text="hello end"
            />
    </LinearLayout>


</LinearLayout>